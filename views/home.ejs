        <%- include('./partials/script') %>

            <script>
                // Load recent blogs
                async function loadRecentBlogs() {
                    try {
                        const response = await fetch('/api/recent-blogs');
                        if (response.ok) {
                            const blogs = await response.json();
                            displayRecentBlogs(blogs);
                        } else {
                            showNoBlogsMessage();
                        }
                    } catch (error) {
                        console.error('Error loading recent blogs:', error);
                        showNoBlogsMessage();
                    }
                }

                // Display recent blogs
                function displayRecentBlogs(blogs) {
                    const container = document.getElementById('recentBlogs');

                    if (blogs.length === 0) {
                        showNoBlogsMessage();
                        return;
                    }

                    container.innerHTML = blogs.slice(0, 3).map(blog => `
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="blog-card-home">
                        <img src="${getBlogImagePath(blog.coverimage)}" 
                             alt="${blog.title}" 
                             class="blog-image-home"
                             onerror="this.src='/public/images/default.png'">
                        <div class="blog-content-home">
                            <h3 class="blog-title-home">${blog.title}</h3>
                            <p class="blog-excerpt-home">
                                ${stripHtml(blog.content).substring(0, 120)}...
                            </p>
                            <div class="blog-meta-home">
                                <div class="blog-author-home">
                                    <img src="${blog.createdby?.profileImage || '/public/images/default.png'}" 
                                         alt="${blog.createdby?.fullname || 'Author'}" 
                                         class="author-avatar-home"
                                         onerror="this.src='/public/images/default.png'">
                                    <span>${blog.createdby?.fullname || 'Anonymous'}</span>
                                </div>
                                <span>${formatDate(blog.createdat)}</span>
                            </div>
                            <div class="mt-3">
                                <a href="/blog/blog/${blog._id}" class="btn btn-outline-primary btn-sm">
                                    Read More
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
                }

                // Show no blogs message
                function showNoBlogsMessage() {
                    const container = document.getElementById('recentBlogs');
                    container.innerHTML = `
                <div class="col-12 text-center">
                    <div class="py-5">
                        <i class="fas fa-blog fa-4x text-muted mb-3"></i>
                        <h3 class="text-muted">No blogs yet</h3>
                        <p class="text-muted">Be the first to share your story!</p>
                        <a href="/blog/addblog" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Write First Blog
                        </a>
                    </div>
                </div>
            `;
                }

                // Load stats
                async function loadStats() {
                    try {
                        const response = await fetch('/api/stats');
                        if (response.ok) {
                            const stats = await response.json();
                            animateCounter('totalBlogs', stats.totalBlogs || 0);
                            animateCounter('totalUsers', stats.totalUsers || 0);
                            animateCounter('totalViews', stats.totalViews || 0);
                        }
                    } catch (error) {
                        console.error('Error loading stats:', error);
                        // Set default values
                        animateCounter('totalBlogs', 0);
                        animateCounter('totalUsers', 0);
                        animateCounter('totalViews', 0);
                    }
                }

                // Animate counter
                function animateCounter(elementId, targetValue) {
                    const element = document.getElementById(elementId);
                    const duration = 2000;
                    const startTime = Date.now();
                    const startValue = 0;

                    function updateCounter() {
                        const elapsed = Date.now() - startTime;
                        const progress = Math.min(elapsed / duration, 1);
                        const currentValue = Math.floor(startValue + (targetValue - startValue) * progress);

                        element.textContent = currentValue.toLocaleString();

                        if (progress < 1) {
                            requestAnimationFrame(updateCounter);
                        }
                    }

                    updateCounter();
                }

                // Utility functions
                function stripHtml(html) {
                    const tmp = document.createElement('div');
                    tmp.innerHTML = html;
                    return tmp.textContent || tmp.innerText || '';
                }

                function formatDate(dateString) {
                    const date = new Date(dateString);
                    return date.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                    });
                }

                function getBlogImagePath(coverimage) {
                    if (!coverimage) {
                        return '/public/images/default.png';
                    }

                    // If path already starts with /public, use as is
                    if (coverimage.startsWith('/public/')) {
                        return coverimage;
                    }

